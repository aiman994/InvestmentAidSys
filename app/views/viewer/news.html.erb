<link rel="stylesheet" href="/assets/css/session.scss">
<link rel="stylesheet" href="/assets/css/bootstrap-theme.min.css">
<link rel="stylesheet" href="/assets/css/bootstrap.min.css">
<head><%= render 'shared/navbar_Layout' %>
   <style type="text/css">
        .bgwrapper {
           width:100%;
           height:100%;
           background-size:cover;
           background-attachment:fixed;    
        }
    </style>
</head>
<br>
<br>
  <h1 align="center" style="color:white">News</h1>
    <p style="color:white;font-size:110%" align="center">All news are pulled from Bloombergnews.com</p>
<body class="bgwrapper" background="/assets/background.png"  style="position:static;overflow:auto;background-repeat:no-repeat;background-size:cover;">
     <% if @bloom != " " %>
       <% @bloom.each_slice(3) do |blooms| %>
        <% blooms.each do |s| %>
          <div class="thumbnail col-md-8" style="width:800px;left:20%">
            <div class="caption">
              <h3><%= s.headlines %> </h3><h5><%= s.newsDate %></h5>
              <p><%= s.story %></p>
              <p>Polarity : <%= s.polarity %></p><p>Subjectivity : <%= s.subjectivity %></p>
              <p><a href=<%= s.newsUrl %> class="btn btn-logins" role="button" style="color:white;">Read More</a></p> 
            </div> 
          </div>
        <% end %><% end %><% end %> 
</body>  
        
 
