 <div class="col-md-8" style="position:static;">
    <div class="column">
        <h3 style="color:blue">News</h3>
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#tweet"><img alt="Brand" src="/assets/Twitter-logo.jpg" width="17" height="17">
                 Twitter</a>
          </li>
          <li><a data-toggle="tab" href="#bloomberg"><img alt="Brand" src="/assets/bernama.png" width="17" height="17">  Bloomberg</a></li>
          <li><a data-toggle="tab" href="#fb"><img alt="Brand" src="/assets/fbLogo.png" width="17" height="17">  Facebook</a></li>
        </ul>
        <br>

        <div class="tab-content " style="overflow-y: scroll;height: 300px;">
            <div id="tweet" class="tab-pane fade in active">
              <% if @tweets != " " %>
                <% @tweets.each do |story| %>
                <div class="well">
                  <h4><img alt="Brand" src=<%= story.profile_pic_url %> width="30" height="30"> @<%= story.username %></h4>
                  <h6><%= story.created_at %></h6>
                  <p><%= story.tweets %></p>
                </div>
                <% end %>
              <% else %>
                <p><%= link_to "No current tweets for this company. Refresh", "/centralAnalysis" %>
              <% end %>
              
            </div>
            <div id="bloomberg" class="tab-pane fade">
               <% if @bloom != " " %>
                <% @bloom.each do |s| %>
                <div class="well">
                  <h4> <%= s.headlines %></h6>
                    <h6><%= s.newsDate %></h6>
                  <p><%= s.story %></p>
                  <p>Polarity : <%= s.polarity %></p><p>Subjectivity : <%= s.subjectivity %></p>
                  <a href=<%= s.newsUrl %> > Read more </a>
                </div>
                <% end %>
              <% else %>
                <p><%= link_to "No current news for this company. Refresh", "/centralAnalysis" %>
              <% end %>
             
            </div>
            <div id="fb" class="tab-pane fade">
             <% if @fb != " " %>
                <% @fb.each do |post| %>
                console.log(post)
                <div class="well">
                  <h4><img alt="Brand" src="https://scontent.xx.fbcdn.net/v/t1.0-1/p50x50/1908056_10152627304334641_7130236665401879348_n.png?oh=3b180c1020b5855a113c121f2e44a05b&oe=59B767F0" width="30" height="30"> @ <%= post.fb_user %></h4>
                  <h6><%= post.time_posted %></h6>
                  <p><%= post.post %></p>
                  <img  src=<%= post.pic_url %> width="80" height="50">
                  <p>Polarity : <%= post.polarity %></p><p>Subjectivity : <%= post.subjectivity %></p>
                  <a href=<%= post.posts_url %> > Read more </a>
                </div>
                <% end %>
              <% else %>
                <p><%= link_to "No current Facebook posts for this company. Refresh", "/centralAnalysis" %>
              <% end %>
            </div>
          </div>
        </div>
    </div>
  </div>

<% end %>
